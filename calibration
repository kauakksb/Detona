self.gyro_sensor.reset_angle()
        buttons_pressed.clear()

        if Button.LEFT in buttons_pressed:

            self.brick.screen.clear()
            self.brick.screen.set_font(tiny_font)
            self.brick.screen.draw_text(0,10,'Esquerda: Preto', text_color = Color.BLACK, background_color = None)
            self.brick.screen.draw_text(0,25,'Direita: Branco', text_color = Color.BLACK, background_color = None)


            if Button.LEFT in self.brick.buttons.pressed():
                self.brick.screen.clear()
                self.brick.screen.draw_text(
                    0,50,'Coloque sobre o Preto', text_color = Color.BLACK, background_color = None)
                wait(5000)
                if Button.LEFT in self.brick.buttons.pressed():
                    self.black = self.front_s_color.get_value('reflection')
                    self.brick.screen.clear()
                    self.brick.screen.draw_text(
                        0,50,'Preto: {}'.format(self.black),text_color = Color.BLACK, background_color = None)
                    wait(5000)

            if Button.RIGHT in self.brick.buttons.pressed():
                self.brick.screen.clear()
                self.brick.screen.draw_text(
                    0,50,'Coloque sobre o Branco', text_color = Color.BLACK, background_color = None)
                wait(5000)
                if Button.RIGHT in self.brick.buttons.pressed():
                    self.white = self.front_s_color.get_value('reflection')
                    self.brick.screen.clear()
                    self.brick.screen.draw_text(
                        0,50,'Branco: {}'.format(self.white),text_color = Color.BLACK, background_color = None)
                    wait(5000)
        pass